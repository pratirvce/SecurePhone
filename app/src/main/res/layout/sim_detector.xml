<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_300">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/carbon_white"
            android:layout_margin="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/text_item_padding">
                    <TextView
                        android:layout_width="@dimen/left_column_width"
                        android:layout_height="wrap_content"
                        android:text="Country"
                        android:id="@+id/is_root"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/dark_blue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Access Granted"
                        android:id="@+id/is_root_available"
                        android:layout_alignTop="@+id/is_root"
                        android:layout_centerHorizontal="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_item_padding">

                    <TextView
                        android:layout_width="@dimen/left_column_width"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Network"
                        android:id="@+id/super_user_text"
                        android:textColor="@color/dark_blue" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="su found"
                            android:id="@+id/is_su_found"
                            android:layout_alignTop="@+id/super_user_text"
                            android:layout_centerHorizontal="true" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/text_item_padding">
                    <TextView
                        android:layout_width="@dimen/left_column_width"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Caption"
                        android:textColor="@color/dark_blue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="BusyBox is installed"
                        android:id="@+id/is_busy_box_installed" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_item_padding">

                    <TextView
                        android:layout_width="@dimen/left_column_width"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Roaming"
                        android:textColor="@color/dark_blue" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="path value"
                        android:id="@+id/path"
                        android:paddingBottom="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_item_padding">

                    <TextView
                        android:layout_width="@dimen/left_column_width"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Voicemail Tag"
                        android:textColor="@color/dark_blue" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="path value"
                        android:id="@+id/voicemail_tag"
                        android:paddingBottom="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_item_padding">

                    <TextView
                        android:layout_width="@dimen/left_column_width"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Device Id"
                        android:textColor="@color/dark_blue" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="path value"
                        android:id="@+id/device_id"
                        android:paddingBottom="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_item_padding">

                    <TextView
                        android:layout_width="@dimen/left_column_width"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Device Software Version"
                        android:textColor="@color/dark_blue" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="path value"
                        android:id="@+id/device_software_version"
                        android:paddingBottom="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/text_item_padding">

                    <TextView
                        android:layout_width="@dimen/left_column_width"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="SIM Serial#"
                        android:textColor="@color/dark_blue" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="path value"
                        android:id="@+id/sim_serial"
                        android:paddingBottom="10dp"/>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>

</FrameLayout>